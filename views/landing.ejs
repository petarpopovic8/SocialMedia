<html>
	<%include partials/header%>
	<body class="landing_body">
		<h1 id="landing_header">Dobrodošli!</h1>
		<div id ="sign_up_div">	
			<form id="sign_up_form">
				<h2>Registracija&nbsp</h2>
				<input type ="text" id="name" name="name" placeholder="Ime">
				<input type ="text" id="email" name="email" placeholder="Email adresa">
				<input type ="password" id="password" name="password" placeholder="Šifra">
				<input id="register_user" type="button" value="Register">
			</form>
		</div>
		<div id ="sign_in_div">	
			<form id="sign_in_form">
				<h2>Prijava&nbsp</h2>
				<input type ="text" id="usr_email" name="email" placeholder="Email adresa">
				<input type ="password" id="usr_pwd" name="password" placeholder="Šifra">
				<input id="sign_in_user" type="button" value="Sign In">
			</form>
		</div>

	</body>
	<script>
		$("#register_user").on("click", function(){
			$.ajax({
				method: "POST",
				url: "/sign_up",
				data: $("#sign_up_form").serialize(),
				success: function(){
					console.log("success!");
				}

			})
		});
	</script>
</html>